<!-- Begin page content -->
<div class="container">
	<div class="page-header">
		<h1><%= user %>'s subscribed (watched) repos</h1>
	</div>
	<table id='subsTable' class='table table-striped table-hover tablesorter'>
		<thead>
			<tr>
				<th>Owner</th><th>Repository</th><th>Open Items</th>
			</tr>
		</thead>
		<tbody>
			<% subs.each do | sub | %>
			<tr>
				<td><a href='<%= sub['owner']['html_url'] %>'><%= sub['owner']['login'] %></a></td>
				<td><a href='<%= sub['html_url'] %>'><%= sub['name'] %></a></td>
				<td><% if sub['open_issues_count'] > 0 %><a href='/issues/<%= sub['full_name'] %>?user=<%= user %>'><%= sub['open_issues_count'] %></a><% end %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>